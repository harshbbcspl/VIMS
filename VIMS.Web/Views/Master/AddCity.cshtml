@model VIMS.Model.Master.CityViewModel

@{
    ViewBag.Title = ViewBag.Action + @VIMS.Model.Resources.City.Citye;
}

<div class="row">
    <div class="col-md-12 my-5">
        <div class="card">
            <div class="card-header row cardTitleRow">
                <div class="col">
                    <h4 class="card-title float-left">@ViewBag.Action @VIMS.Model.Resources.City.Citye</h4>
                </div>
                <div class="col-auto">
                    <a href="@Url.Action("CityMaster", "Master")" class="btn btn-outline-primary">
                        @VIMS.Model.Resources.City.ViewCity
                    </a>
                </div>
            </div>

            <div class="card-body">
                @using (Html.BeginForm("AddCity", "Master", FormMethod.Post, new { @class = "forms-sample", autocomplete = "off" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.CityId)
                    @Html.HiddenFor(m => m.Action)

                    <div class="row form-group">

                        <div class="col-md-3 col-xl-3 col-sm-12">
                            <label class="col-form-label">
                                @VIMS.Model.Resources.City.MState
                                @Html.ValidationMessageFor(m => m.StateId, "", new { @class = "text-danger" })
                            </label>

                            @Html.DropDownListFor(
                                model => model.StateId,
                                new SelectList(Model.StatesList, "StateId", "StateName", Model.StateId),
                                @VIMS.Model.Resources.City.SelectState,
                                new Dictionary<string, object>()
                                {
                                    {"id","ddlState"},
                                    {"class","select2 w-100"},
                                    {"autocomplete","off"},
                                    {"required","required"}
                                }
                            )
                        </div>

                        <div class="col-md-3 col-xl-2 col-sm-12">
                            <label class="col-form-label">
                                @VIMS.Model.Resources.City.CityCode
                                @Html.ValidationMessageFor(m => m.CityCode, "", new { @class = "text-danger" })
                            </label>

                            @Html.TextBoxFor(m => m.CityCode, new Dictionary<string, object>() {
                                {"id","txtCityCode"},
                                {"class","form-control text-uppercase"},
                                {"autocomplete","off"},
                                {"required","required"},
                                {"placeholder",@VIMS.Model.Resources.City.ECityCode}
                            })
                        </div>

                        <div class="col-md-3 col-xl-2 col-sm-12">
                            <label class="col-form-label">
                                @VIMS.Model.Resources.City.CityName
                                @Html.ValidationMessageFor(m => m.CityName, "", new { @class = "text-danger" })
                            </label>

                            @Html.TextBoxFor(m => m.CityName, new Dictionary<string, object>() {
                                {"id","txtCityName"},
                                {"class","form-control text-capitalize"},
                                {"autocomplete","off"},
                                {"required","required"},
                                {"placeholder",@VIMS.Model.Resources.City.ECityName }
                            })
                        </div>

                        <div class="col-md-3 col-xl-2 col-sm-12">
                            <label class="col-form-label">@VIMS.Model.Resources.City.Active</label>

                            @Html.DropDownListFor(x => x.IsActive, new List<SelectListItem>
                            {
                                new SelectListItem{ Text="Enable", Value = "true", Selected=Model.IsActive },
                                new SelectListItem{ Text="Disable", Value = "false", Selected=!Model.IsActive }
                            }, new { @class = "select2 w-100", @id = "IsActive" })
                        </div>

                        <div class="col-md-12 text-right mt-4">
                            <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
                        </div>

                    </div>
                }
            </div>
        </div>
    </div>
</div>
