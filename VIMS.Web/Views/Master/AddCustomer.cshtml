@model VIMS.Model.Master.CustomerViewModel

@{
    ViewBag.Title = ViewBag.Action + @VIMS.Model.Resources.Customer.Customere;
}

<div class="row">
    <div class="col-md-12 my-5">
        <div class="card">
            <div class="card-header row cardTitleRow">
                <div class="col">
                    <h4 class="card-title float-left">@ViewBag.Action @VIMS.Model.Resources.Customer.Customere</h4>
                </div>
                <div class="col-auto">
                    <a href="@Url.Action("CustomerMaster", "Master")" class="btn btn-outline-primary">
                        @VIMS.Model.Resources.Customer.ViewCustomers
                    </a>
                </div>
            </div>

            <div class="card-body">
                @using (Html.BeginForm("AddCustomer", "Master", FormMethod.Post, new { @class = "forms-sample", autocomplete = "off" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.CustomerId)
                    @Html.HiddenFor(m => m.Action)

                    <div class="row form-group">

                        <div class="col-md-3 col-xl-2 col-sm-12">
                            <label class="col-form-label">
                                @VIMS.Model.Resources.Customer.SocietyCode
                                @Html.ValidationMessageFor(m => m.SocietyCode, "", new { @class = "text-danger" })
                            </label>
                            @Html.TextBoxFor(m => m.SocietyCode, new Dictionary<string, object>() {
                                {"id","txtSocietyCode"},
                                {"class","form-control text-uppercase"},
                                {"autocomplete","off"},
                                {"required","required"},
                                {"placeholder",@VIMS.Model.Resources.Customer.ESocietyCode}
                            })
                        </div>

                        <div class="col-md-3 col-xl-2 col-sm-12">
                            <label class="col-form-label">
                                @VIMS.Model.Resources.Customer.CustomerCode
                                @Html.ValidationMessageFor(m => m.CustomerCode, "", new { @class = "text-danger" })
                            </label>
                            @Html.TextBoxFor(m => m.CustomerCode, new Dictionary<string, object>() {
                                {"id","txtCustomerCode"},
                                {"class","form-control text-uppercase"},
                                {"autocomplete","off"},
                                {"required","required"},
                                {"placeholder",@VIMS.Model.Resources.Customer.ECustomerCode}
                            })
                        </div>

                        <div class="col-md-3 col-xl-2 col-sm-12">
                            <label class="col-form-label">
                                @VIMS.Model.Resources.Customer.Name
                                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                            </label>
                            @Html.TextBoxFor(m => m.Name, new Dictionary<string, object>() {
                                {"id","txtName"},
                                {"class","form-control text-capitalize"},
                                {"autocomplete","off"},
                                {"required","required"},
                                {"placeholder",@VIMS.Model.Resources.Customer.EName}
                            })
                        </div>

                        <div class="col-md-3 col-xl-2 col-sm-12">
                            <label class="col-form-label">
                                @VIMS.Model.Resources.Customer.Address
                                @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                            </label>
                            @Html.TextBoxFor(m => m.Address, new Dictionary<string, object>() {
                                {"id","txtAddress"},
                                {"class","form-control"},
                                {"autocomplete","off"},
                                {"required","required"},
                                {"placeholder",@VIMS.Model.Resources.Customer.EAddress}
                            })
                        </div>

                        <div class="col-md-3 col-xl-2 col-sm-12">
                            <label class="col-form-label">
                                @VIMS.Model.Resources.Customer.ContactNumber1
                                @Html.ValidationMessageFor(m => m.ContactNumber1, "", new { @class = "text-danger" })
                            </label>
                            @Html.TextBoxFor(m => m.ContactNumber1, new Dictionary<string, object>() {
                                {"id","txtContact1"},
                                {"class","form-control"},
                                {"autocomplete","off"},
                                {"required","required"},
                                {"placeholder",@VIMS.Model.Resources.Customer.ECon1}
                            })
                        </div>

                        <div class="col-md-3 col-xl-2 col-sm-12">
                            <label class="col-form-label">
                                @VIMS.Model.Resources.Customer.ContactNumber2
                            </label>
                            @Html.TextBoxFor(m => m.ContactNumber2, new Dictionary<string, object>() {
                                {"id","txtContact2"},
                                {"class","form-control"},
                                {"autocomplete","off"},
                                {"placeholder",@VIMS.Model.Resources.Customer.ECon2}
                            })
                        </div>

                        <div class="col-md-3 col-xl-2 col-sm-12">
                            <label class="col-form-label">
                                @VIMS.Model.Resources.Customer.Role
                                @Html.ValidationMessageFor(m => m.RoleId, "", new { @class = "text-danger" })
                            </label>
                            @Html.DropDownListFor(
                                m => m.RoleId,
                                new SelectList(Model.RoleList, "RoleId", "RoleName", Model.RoleId),
                                @VIMS.Model.Resources.Customer.SelectRole,
                                new { @class = "select2 w-100", @id = "ddlRole", @required = "required" }
                            )
                        </div>

                        <div class="col-md-3 col-xl-2 col-sm-12">
                            <label class="col-form-label">
                                @VIMS.Model.Resources.Customer.Password
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </label>
                            @Html.TextBoxFor(m => m.Password, new Dictionary<string, object>() {
                                {"id","txtPassword"},
                                {"class","form-control"},
                                {"autocomplete","off"},
                                {"required","required"},
                                {"placeholder",@VIMS.Model.Resources.Customer.EPassword}
                            })
                        </div>

                        <div class="col-md-3 col-xl-2 col-sm-12">
                            <label class="col-form-label">@VIMS.Model.Resources.Customer.Active</label>
                            @Html.DropDownListFor(x => x.IsActive, new List<SelectListItem>
                            {
                                new SelectListItem{ Text="Enable", Value = "true", Selected=Model.IsActive },
                                new SelectListItem{ Text="Disable", Value = "false", Selected=!Model.IsActive }
                            }, new { @class = "select2 w-100", @id = "IsActive" })
                        </div>

                        <div class="col-md-12 text-right mt-4">
                            <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
                        </div>

                    </div>
                }
            </div>
        </div>
    </div>
</div>
