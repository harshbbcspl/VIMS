@model VIMS.Model.Master.SpeciesViewModel
@{
    ViewBag.Title = "Add Species";
}

<div class="row">
    <div class="col-md-12 my-5">
        <div class="card">
            <div class="card-header row cardTitleRow">
                <div class="col">
                    <h4 class="card-title float-left">@ViewBag.Action Species</h4>
                </div>
                <div class="col-auto">
                    <a href="@Url.Action("SpeciesMaster", "Master")" class="btn btn-outline-primary">View Species</a>
                </div>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("AddSpecies", "Master", FormMethod.Post, new { @class = "forms-sample", autocomplete = "off" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(x => x.SpeciesId)
                    @Html.HiddenFor(x => x.Action)

                    <div class="row form-group">
                        <div class="col-md-3 col-xl-2 col-sm-12">
                            <label class="col-form-label">
                                Species Code
                                @Html.ValidationMessageFor(m => m.SpeciesCode, "", new { @class = "text-danger" })
                            </label>
                            @Html.TextBoxFor(m => m.SpeciesCode, new Dictionary<string, object>() {
                                {"id","txtSpeciesCode"},
                                {"class","form-control text-uppercase"},
                                {"autocomplete","off"},
                                {"required","required"},
                                {"placeholder","Enter Species Code"}
                            })
                        </div>

                        <div class="col-md-3 col-xl-2 col-sm-12">
                            <label class="col-form-label">
                                Species Name
                                @Html.ValidationMessageFor(m => m.SpeciesName, "", new { @class = "text-danger" })
                            </label>
                            @Html.TextBoxFor(m => m.SpeciesName, new Dictionary<string, object>() {
                                {"id","txtSpeciesName"},
                                {"class","form-control text-capitalize"},
                                {"autocomplete","off"},
                                {"required","required"},
                                {"placeholder","Enter Species Name"}
                            })
                        </div>

                        <div class="col-md-3 col-xl-2 col-sm-12">
                            <label class="col-form-label">Active</label>
                            @Html.DropDownListFor(x => x.IsActive, new List<SelectListItem>
                            {
                                new SelectListItem{ Text="Enable", Value = "true", Selected=true },
                                new SelectListItem{ Text="Disable", Value = "false" }
                            }, new { @class = "select2 w-100", @id = "IsActive" })
                        </div>

                        <div class="col-md-12 text-right mt-4">
                            <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        var speciesCode = $("#txtSpeciesCode").val();
        if (speciesCode) {
            // Disable species code textbox on edit
            $("#txtSpeciesCode").prop("disabled", true);
        }
    });
</script>
