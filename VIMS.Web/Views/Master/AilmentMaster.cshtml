@model IEnumerable<VIMS.DB.VIMS_AilmentMasterRtr_Result>

@{
    ViewBag.Title = @VIMS.Model.Resources.Ailment.title;
    ViewBag.Module = "Master";
}

<div class="row">
    <div class="col-sm-12 my-5">
        <div class="card card-table">
            <div class="card-header row cardTitleRow">
                <div class="col">
                    <h4 class="card-title float-left">@VIMS.Model.Resources.Ailment.AilmentMaster</h4>
                </div>

                <div class="col-auto">
                    
                    @*@if (Convert.ToInt32(TempData["InsertRight"]) == 1)
        {*@
                    <a href="@Url.Action("AddAilment", "Master")"
                       class="btn btn-outline-primary float-right">
                        @VIMS.Model.Resources.Ailment.AddAilment
                    </a>
                    @*}*@
                </div>
            </div>

            <div class="card-body booking_card">
                <div class="table-responsive">
                    <table class="table card-table table-vcenter text-nowrap datatable">
                        <thead>
                            <tr>
                                <th>@VIMS.Model.Resources.Ailment.Action</th>
                                <th>@VIMS.Model.Resources.Ailment.Active</th>
                                <th>@VIMS.Model.Resources.Ailment.AilmentCode</th>
                                <th>@VIMS.Model.Resources.Ailment.AilmentName</th>
                                <th>@VIMS.Model.Resources.Ailment.CreatedBy</th>
                            </tr>
                        </thead>

                        <tbody>
                            @*@if (Convert.ToInt32(TempData["ViewRight"]) == 1)
        {*@
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @*@if (Convert.ToInt32(TempData["UpdateRight"]) == 1)
        {*@
                                    <a href="@Url.Action("EditAilmentMaster", "Master", new { id = item.AilmentId })" class="mx-3">
                                        <i class="ti ti-edit fa-2x"></i>
                                    </a>
                                    @*}
        else
        {
            <i class="ti ti-edit-off fa-2x"></i>
        }*@
                                </td>

                                <td class="justify-content-center d-flex">

                                    @*@if (Convert.ToInt32(TempData["DeleteRight"]) == 1)
        {*@
                                    <div class="slider">
                                        <input type="checkbox"
                                               name="slider"
                                               class="slider-checkbox"
                                               id="chk_@item.AilmentId"
                                               onclick='ActiveDeactiveStatusChange(this, "@item.AilmentId", "AilmentMaster")'
                                               @(item.IsActive ? "checked" : "") />

                                        <label class="slider-label" for="chk_@item.AilmentId">
                                            <span class="slider-inner"></span>
                                            <span class="slider-circle"></span>
                                        </label>
                                    </div>
                                    @*}
        else
        {
            <div class="slider">
                <input type="checkbox" name="slider" class="slider-checkbox" disabled="disabled" id="@item.AilmentId"
                       @(item.IsActive == true ? "checked" : "")>
                <label class="slider-label" for="@item.AilmentId">
                    <span class="slider-inner"></span>
                    <span class="slider-circle"></span>
                </label>
            </div>
        }*@
                                </td>

                                <td>@item.AilmentCode</td>
                                <td>@item.AilmentName</td>
                                <td>@item.CreatedBy</td>
                            </tr>
                            }
                            @*}*@
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>
