                        <tbody>
                            @*@if (Convert.ToInt32(TempData["ViewRight"]) == 1)
        {*@
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>

                                    @*@if (Convert.ToInt32(TempData["UpdateRight"]) == 1)
            {*@
                                    <a href="@Url.Action("EditCustomer", "Master", new { id = item.CustomerId })"
                                       class="mx-3">
