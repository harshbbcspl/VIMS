                                            {*@
                                                <div class="slider">
                                                    <input type="checkbox" name="slider" class="slider-checkbox" id="@item.SpeciesId"
                                                           onclick='ActiveDeactiveStatusChange(this, "@item.SpeciesId", "SpeciesMaster")'
                                                           @(item.IsActive == true ? "checked" : "")>
                                                    <label class="slider-label" for="@item.SpeciesId">
                                                        <span class="slider-inner"></span>
                                                        <span class="slider-circle"></span>
                                                    </label>
                                                </div>
                                            @*}
