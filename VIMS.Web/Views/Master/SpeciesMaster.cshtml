                                                    <label class="slider-label" for="@item.SpeciesId">
                                                        <span class="slider-inner"></span>
                                                        <span class="slider-circle"></span>
                                                    </label>
                                                </div>
                                            }*@
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.SpeciesCode)</td>
                                        <td>@Html.DisplayFor(modelItem => item.SpeciesName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.CreatedBy)</td>
                                    </tr>
