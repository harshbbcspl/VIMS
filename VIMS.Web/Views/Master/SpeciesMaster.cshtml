                            </tr>
                        </thead>
                        <tbody>
                            @*@if (Convert.ToInt32(TempData["ViewRight"]) == 1)
                            {*@
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @*@if (Convert.ToInt32(TempData["UpdateRight"]) == 1)
                                            {*@
                                                <a href="@Url.Action("EditSpeciesMaster", "Master", new { id = item.SpeciesId })" class="mx-3">
                                                    <i class="ti ti-edit fa-2x"></i>
                                                </a>
                                            @*}
                                            else
                                            {
                                                <i class="ti ti-edit-off fa-2x"></i>
                                            }*@
                                        </td>
                                        <td class="justify-content-center d-flex">
