@model VIMS.Model.Usermanagement.RoleViewModel

@{
    ViewBag.Title = (ViewBag.Action == "Update"
   ? VIMS.Model.Resources.Role.EditRole
   : VIMS.Model.Resources.Role.AddRole);
}

<div class="row">
    <div class="col-md-12 my-5">
        <div class="card">
            <div class="card-header row cardTitleRow">
                <div class="col">
                    <h4 class="card-title float-left">
                        @(ViewBag.Action == "Update"
                            ? VIMS.Model.Resources.Role.EditRole
                            : VIMS.Model.Resources.Role.AddRole)
                    </h4>
                </div>
                <div class="col-auto">
                    <a href="@Url.Action("RoleMaster", "Usermanagement")" class="btn btn-outline-primary">
                        @VIMS.Model.Resources.Role.ViewRoles
                    </a>
                </div>
            </div>

            <div class="card-body">
                @using (Html.BeginForm("AddRole", "Usermanagement", FormMethod.Post, new { @class = "forms-sample", autocomplete = "off" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.RoleId)
                    @Html.HiddenFor(m => m.Action)

                    <div class="row form-group">

                        <div class="col-md-3 col-xl-2 col-sm-12">
                            <label class="col-form-label">
                                @VIMS.Model.Resources.Role.RoleName
                                @Html.ValidationMessageFor(m => m.RoleName, "", new { @class = "text-danger" })
                            </label>
                            @Html.TextBoxFor(m => m.RoleName, new Dictionary<string, object>() {
                                {"id","txtRoleName"},
                                {"class","form-control text-capitalize"},
                                {"autocomplete","off"},
                                {"required","required"},
                                {"placeholder",@VIMS.Model.Resources.Role.ERoleName}
                            })
                        </div>

                        <div class="col-md-3 col-xl-2 col-sm-12">
                            <label class="col-form-label">
                                @VIMS.Model.Resources.Role.Active
                                @Html.ValidationMessageFor(m => m.IsActive, "", new { @class = "text-danger" })
                            </label>
                            @Html.DropDownListFor(x => x.IsActive, new List<SelectListItem>
                            {
                                new SelectListItem{ Text="Enable", Value = "true", Selected=Model.IsActive },
                                new SelectListItem{ Text="Disable", Value = "false", Selected=!Model.IsActive }
                            }, new { @class = "select2 w-100", @id = "ddlIsActive" })
                        </div>

                        <div class="col-md-12 text-right mt-4">
                            <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
                        </div>

                    </div>
                }
            </div>
        </div>
    </div>
</div>
